{
  "publisher": "rjoydip",
  "name": "artifile",
  "displayName": "Artifile",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.2",
  "description": "Automated File Activity for hack any desktop tracker",
  "author": "Joydip Roy <joydip.and@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/artifile#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjoydip/artifile"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/artifile/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18",
    "vscode": "^1.83.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "configuration": {
    "title": "artifile"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "nr deps:update && npx husky install",
    "all": "nr deps:update && nr lint && nr typecheck && nr build && nr test",
    "build": "tsup",
    "dev": "nr build --watch",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "eslint .",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "test": "vitest run",
    "vscode:prepublish": "nr build"
  },
  "dependencies": {
    "magic-regexp": "^0.7.0",
    "p-throttle": "^5.1.0",
    "pkg-conf": "^4.0.0",
    "text-extensions": "^2.4.0",
    "totalist": "^3.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.0",
    "@antfu/ni": "^0.21.8",
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.84.1",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "pnpm": "8.10.2",
    "taze": "^0.12.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vscode": "^1.1.37"
  },
  "nano-staged": {
    "*": [
      "eslint --color --cache --fix --cache-location .eslintcache ."
    ]
  }
}
