{
  "publisher": "rjoydip",
  "name": "automated-file-activity",
  "displayName": "Automated File Activity (afa) for hack any desktop tracker",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.9.2",
  "description": "",
  "author": "Joydip Roy <joydip.and@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/automated-file-activity#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjoydip/automated-file-activity"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/automated-file-activity/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/rjoydip"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18",
    "vscode": "^1.83.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "title": "Start Automate",
        "command": "afa.startAutomate",
        "category": "AFA"
      },
      {
        "title": "Stop Automate",
        "command": "afa.stopAutomate",
        "category": "AFA"
      }
    ]
  },
  "menus": {
    "commandPalette": [
      {
        "command": "afa.startAutomate",
        "when": "false"
      },
      {
        "command": "afa.stopAutomate",
        "when": "false"
      }
    ]
  },
  "configuration": {
    "title": "AFA"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "nr deps:update",
    "build": "tsup ./src/extension.ts --external vscode --minify --clean",
    "dev": "tsup ./src/extension.ts --external vscode --watch --sourcemap",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "spell": "cspell .",
    "test": "vitest run",
    "vscode:prepublish": "nr build"
  },
  "dependencies": {
    "magic-regexp": "^0.7.0",
    "text-extensions": "^2.4.0",
    "totalist": "^3.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.0.0-beta.29",
    "@antfu/ni": "^0.21.8",
    "@types/node": "^20.8.9",
    "@types/vscode": "^1.83.1",
    "@vscode/vsce": "^2.21.1",
    "bumpp": "^9.2.0",
    "cspell": "^7.3.8",
    "eslint": "^8.52.0",
    "esno": "^0.17.0",
    "pnpm": "^8.9.2",
    "rimraf": "^5.0.5",
    "taze": "^0.12.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vscode": "^1.1.37"
  }
}
