{
  "publisher": "rjoydip",
  "name": "artifile",
  "displayName": "Artifile - A VSCode automation extension",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.3",
  "description": "A VSCode automation extension",
  "author": "Joydip Roy <joydip.and@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/rjoydip/artifile#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjoydip/artifile"
  },
  "bugs": {
    "url": "https://github.com/rjoydip/artifile/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18",
    "vscode": "^1.83.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "artifile.start-automate",
        "category": "Artifile",
        "title": "Start Automatation"
      },
      {
        "command": "artifile.stop-automate",
        "category": "Artifile",
        "title": "Stop Automatation"
      }
    ]
  },
  "configuration": {
    "type": "object",
    "title": "Artifile - A VSCode automation extension",
    "properties": {
      "artifile.gitignore": {
        "type": "boolean",
        "default": true,
        "description": "Enable gitignore to parse excludes."
      },
      "artifile.excludes": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "node_modules",
            "cache",
            "dist"
          ]
        }
      }
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "all": "nr deps:update && nr lint && nr typecheck && nr build && nr test",
    "build": "esno scripts/build.ts",
    "dev": "esno scripts/dev.ts",
    "deps:update": "taze -r -w -i -f -l",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "test": "vitest run",
    "vscode:prepublish": "nr build"
  },
  "dependencies": {
    "magic-regexp": "^0.7.0",
    "text-extensions": "^2.4.0",
    "totalist": "^3.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.0.0",
    "@antfu/ni": "^0.21.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.84.1",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "nano-staged": "^0.8.0",
    "pnpm": "8.10.3",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.12.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vscode": "^1.1.37"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm deps:update && pnpm build && pnpm test && pnpm typecheck && npx nano-staged"
  },
  "nano-staged": {
    "*": [
      "eslint --color --cache --fix --cache-location .eslintcache ."
    ]
  }
}
